<resources>
    <!-- Default application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- DarkGray theme -->
    <style name="AppThemeDarkGray" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkGray_theme</item>
        <item name="colorPrimaryDark">@color/darkGray_theme_d2</item>
        <item name="colorAccent">@color/darkGray_theme_accent</item>
    </style>


    <!-- Theme with no action bar -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Additional themes -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Light upper case font with letter spacing for navigation drawer icons -->
    <style name="navDrawerMenuText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
